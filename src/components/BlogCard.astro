---
interface Props {
  url: string;
  title: string;
  excerpt: string;
  date: Date;
  minutesRead: string;
}

const { url, title, excerpt, date, minutesRead } = Astro.props;
---

<div class="space-y-2">
  <a href={url} class="hover:underline hover:underline-offset-8 text-xl"
    >{title}</a
  >
  <p class="font-light">{excerpt}</p>
  <div class="space-x-4 text-sm font-medium">
    <time
      >🗓️ {
        date.toLocaleDateString("en-us", {
          year: "numeric",
          month: "short",
          day: "numeric",
        })
      }</time
    ><span>⏳ {minutesRead}</span>
  </div>
</div>
